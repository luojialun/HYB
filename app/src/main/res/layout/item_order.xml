<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/rectangle_gray_8radius"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号："
        android:textSize="15sp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单状态："
        android:textSize="15sp"
        android:textColor="#ed804e"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    
    <ImageView
        android:id="@+id/image_goods"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/rectangle_white_8radius"
        android:layout_below="@id/tv_order_number"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textColor="#929292"
        android:lineSpacingExtra="2dp"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:layout_toRightOf="@id/image_goods"
        android:layout_alignTop="@id/image_goods"
        android:layout_alignBottom="@id/image_goods"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"/>
    
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金额："
        android:textSize="15sp"
        android:layout_below="@id/tv_goods_name"
        android:layout_alignParentRight="true"/>
    
    <TextView
        android:id="@+id/tv_next"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="取消订单"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/rectangle_white_17raduis"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_price"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="付款"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/rectangle_white_17raduis"
        android:layout_below="@id/tv_price"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/tv_next"
        android:layout_marginRight="12dp"
        android:visibility="gone"/>



</RelativeLayout>
