<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeefef">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/color_d81e06">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/rectangle_white_8radius"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="45dp">


                <ImageView
                    android:id="@+id/image_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/setting"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13512341234"
                    android:textColor="#272727"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="60dp"
                    />

                <TextView
                    android:id="@+id/tv_recommand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐人:13512341234"
                    android:textColor="#272727"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@id/tv_mobile"
                    android:layout_marginTop="25dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_money_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="15dp"
                            android:textColor="#86e2d2"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            />
                        <TextView
                            android:id="@+id/tv_money_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="我的余额"
                            android:textSize="15dp"
                            android:textColor="#707070"
                            android:gravity="center"
                            android:layout_alignTop="@id/tv_money_number"
                            android:layout_marginTop="20dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_cash_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="15dp"
                            android:textColor="#86e2d2"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            />
                        <TextView
                            android:id="@+id/tv_cash_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="已提现"
                            android:textSize="15dp"
                            android:textColor="#707070"
                            android:gravity="center"
                            android:layout_alignTop="@id/tv_cash_number"
                            android:layout_marginTop="20dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_income_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="15dp"
                            android:textColor="#86e2d2"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            />
                        <TextView
                            android:id="@+id/tv_income_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="今日收入"
                            android:textSize="15dp"
                            android:textColor="#707070"
                            android:gravity="center"
                            android:layout_alignTop="@id/tv_income_number"
                            android:layout_marginTop="20dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_total_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="15dp"
                            android:textColor="#86e2d2"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            />
                        <TextView
                            android:id="@+id/tv_total_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="累计收益"
                            android:textSize="15dp"
                            android:textColor="#707070"
                            android:gravity="center"
                            android:layout_alignTop="@id/tv_total_number"
                            android:layout_marginTop="20dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/image_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/header_default"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/ll_header"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rectangle_white_8radius">

                <TextView
                    android:id="@+id/tv_order"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="商场订单"
                    android:textColor="#272727"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/tv_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="全部订单"
                    android:textColor="#86e2d2"
                    android:textSize="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight ="15dp"/>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_order"
                    android:background="@color/color_eeefef"></view>

