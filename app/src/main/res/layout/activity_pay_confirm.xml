<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.acitvity.PayConfirmActivity"
    android:orientation="vertical"
    android:background="@color/color_dddddd">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="支付收银台"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/rectangle_angle_orange"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rectangle_white_8radius"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="-15dp"
        android:layout_below="@id/title_tv"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="需支付："
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/wechat_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/wechat_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/pay_wechat"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/wechat_iv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"/>
            <ImageView
                android:id="@+id/wechat_select_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/pay_select"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/alipay_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/alipay_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/pay_alipay"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/alipay_iv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"/>
            <ImageView
                android:id="@+id/alipay_select_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/pay_unselect"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/confirm_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_angle_orange"
        android:gravity="center"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>