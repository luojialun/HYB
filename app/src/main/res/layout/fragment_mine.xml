<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeefef">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--背景-->
            <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="200dp"-->
                <!--android:background="@color/base">-->

            <!--</RelativeLayout>-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@mipmap/mine_backgrouand"
                android:scaleType="centerCrop"/>

            <!--头部收入-->
            <RelativeLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rectangle_white_8radius">

                <ImageView
                    android:id="@+id/setting_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/setting"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:textColor="#272727"
                    android:textSize="14sp"
                    tools:text="13512341234" />

                <TextView
                    android:id="@+id/tv_invate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#272727"
                    android:textSize="14sp"
                    android:layout_below="@id/tv_mobile"
                    tools:text="111" />
                
                <ImageView
                    android:layout_above="@id/toolbar_ll"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_eaeaea"/>

                <LinearLayout
                    android:id="@+id/toolbar_ll"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_money_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="0.0"
                            android:textColor="@color/color_d81e06"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_money_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/tv_money_number"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="我的余额"
                            android:textColor="#707070"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_cash_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="0.0"
                            android:textColor="@color/color_d81e06"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_cash_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/tv_cash_number"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="已提现"
                            android:textColor="#707070"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_income_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="0.0"
                            android:textColor="@color/color_d81e06"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_income_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/tv_income_number"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="今日收入"
                            android:textColor="#707070"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_total_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="0.0"
                            android:textColor="@color/color_d81e06"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_total_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/tv_total_number"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="累计收益"
                            android:textColor="#707070"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <!--头像icon-->
            <ImageView
                android:id="@+id/image_header"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:src="@mipmap/header_default"
                android:padding="10dp"
                android:background="@drawable/rectangle_white_40radius"/>

            <TextView
                android:id="@+id/tv_vip"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="#ff5722"
                android:layout_toRightOf="@id/image_header"
                android:layout_alignBottom="@id/image_header"
                android:layout_marginLeft="-25dp"
                android:layout_marginBottom="10dp"
                android:textSize="10sp"
                android:gravity="center"
                tools:text="111"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/rectangle_white_header_radius_border"/>

            <!--订单-->
            <RelativeLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/ll_header"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rectangle_white_8radius">

                <TextView
                    android:id="@+id/tv_order"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="商城订单"
                    android:textColor="#272727"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="全部订单"
                    android:textColor="@color/color_d81e06"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_order"
                    android:background="@color/color_eeefef" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_order"
                    android:layout_alignParentBottom="true">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image_unpay"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/mine_unpay" />

                        <TextView
                            android:id="@+id/unpay_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="30dp"
                            android:layout_alignLeft="@id/image_unpay"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/oval_red"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/image_unpay"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="待付款"
                            android:textColor="#272727"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image_unsend"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/mine_unsend" />

                        <TextView
                            android:id="@+id/unsend_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_alignLeft="@id/image_unsend"
                            android:background="@drawable/oval_red"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/image_unsend"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="待发货"
                            android:textColor="#272727"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image_unget"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/mine_unget" />

                        <TextView
                            android:id="@+id/unget_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_alignLeft="@id/image_unget"
                            android:background="@drawable/oval_red"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/image_unget"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="待收货"
                            android:textColor="#272727"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image_finish"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/mine_finish" />

                        <TextView
                            android:id="@+id/finish_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_alignLeft="@id/image_finish"
                            android:background="@drawable/oval_red"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/image_finish"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="已完成"
                            android:textColor="#272727"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <!--我的其他-->
            <RelativeLayout
                android:id="@+id/ll_other"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/ll_order"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rectangle_white_8radius">

                <RelativeLayout
                    android:id="@+id/ll_team"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/image_team"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/mine_team" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/image_team"
                        android:text="我的团队"
                        android:textColor="#272727"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/mine_more" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_eeefef" />
                </RelativeLayout>

                <!--<RelativeLayout-->
                    <!--android:id="@+id/ll_merchant"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:layout_below="@id/ll_team">-->

                    <!--<ImageView-->
                        <!--android:id="@+id/image_merchant"-->
                        <!--android:layout_width="28dp"-->
                        <!--android:layout_height="28dp"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginLeft="15dp"-->
                        <!--android:src="@mipmap/mine_merchant" />-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginLeft="20dp"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:layout_toRightOf="@id/image_merchant"-->
                        <!--android:text="上传商品"-->
                        <!--android:textColor="#272727"-->
                        <!--android:textSize="13sp" />-->

                    <!--<ImageView-->
                        <!--android:layout_width="15dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginRight="20dp"-->
                        <!--android:src="@mipmap/mine_more" />-->

                    <!--<ImageView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:background="@color/color_eeefef" />-->
                <!--</RelativeLayout>-->

                <RelativeLayout
                    android:id="@+id/ll_get_cash"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/ll_team">

                    <ImageView
                        android:id="@+id/image_get_cash"
                        android:layout_width="26dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="16dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/mine_get_cash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/image_get_cash"
                        android:text="佣金提现"
                        android:textColor="#272727"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/mine_more" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_eeefef" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_detail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/ll_get_cash">

                    <ImageView
                        android:id="@+id/image_detail"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/mine_detail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/image_detail"
                        android:text="分润明细"
                        android:textColor="#272727"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/mine_more" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_eeefef" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_share"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/ll_detail">

                    <ImageView
                        android:id="@+id/image_share"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/mine_share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/image_share"
                        android:text="推广佣金政策"
                        android:textColor="#272727"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/mine_more" />
                </RelativeLayout>
            </RelativeLayout>
            
            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="退出登录"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_red_25radius"
                android:layout_below="@+id/ll_other"
                android:layout_marginTop="30dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tv_logout">

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>