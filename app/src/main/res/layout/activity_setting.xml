<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.acitvity.SettingActivity">

    <View
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="设置"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_eaeaea" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/avatar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的头像"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/avatar_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mine_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/header_default"
            android:layout_toLeftOf="@id/avatar_more_iv"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eaeaea"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/nikename_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的昵称"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/nikename_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mine_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/nikename_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="18812341234"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_toLeftOf="@id/nikename_more_iv"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/mobile_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号码"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/mobile_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mine_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/mobile_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="18812341234"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_toLeftOf="@id/mobile_more_iv"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/code_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="微信二维码"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/code_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mine_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toLeftOf="@id/code_more_iv"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>

        <ImageViewdp
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eaeaea"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>